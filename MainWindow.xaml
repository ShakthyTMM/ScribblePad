<Window x:Class="ScribblePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScribblePad" Height="350" Width="525" Background="Transparent" WindowState="Maximized">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,365,0" >
        <Button Margin="10" Width="35" Height="30" Click="OnColorButtonClick">
            <Image Source="color.png"/>
        </Button>
        <Button Margin="10" Content="Save" Height="30" Width="35" Click="OnSaveButtonClick" >
        </Button>
        <Button Margin="10" Content="Open" Height="30" Width="35" Click="OnOpenClick" >
        </Button>
    </StackPanel>
</Window>