<Window x:Class="ScribblePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScribblePad" Height="350" Width="525" Background="Transparent" WindowState="Maximized">
    <StackPanel VerticalAlignment="Top" Height="63">
        <Menu Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Save" Click="OnSaveClick"/>
                <MenuItem Header="Open" Click="OnOpenClick"/>
            </MenuItem>
        </Menu>
        <ToolBar Height="35" Width="200">
            <Button x:Name="Pen" Click="OnColorFillClick">
                <Image Source="Images/color.png"/>
            </Button>
            <Separator/>
            <Button Click="OnEraserClick">
                <Image Source="Images/eraser.png"/>
            </Button>
            <Separator/>
            <Button Click="OnPenClick">
                <Image Source="Images/pencil.png"/>
            </Button>
            <Separator/>
            <Button Click="OnUnDo">
                <Image Source="Images/undo.png"/>
            </Button>
            <Separator/>
            <Button Click="OnReDo">
                <Image Source="Images/redo.png"/>
            </Button>
        </ToolBar>
    </StackPanel>
</Window>