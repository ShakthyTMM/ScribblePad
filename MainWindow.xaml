<Window x:Class="DrawingShapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScribblePad" Height="350" Width="525" Background="Transparent" WindowState="Maximized">
    <StackPanel VerticalAlignment="Top" Height="63">
        <Menu Height="20">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="OnNew"/>
                <MenuItem Header="Open" Click="OnOpen"/>
                <MenuItem Header="Save" Click="OnSave"/>
            </MenuItem>
        </Menu>
        <ToolBar Height="35" Width="277">
            <Button Click="OnRect">
                <Image Source="Images/rectangle.png"/>
            </Button>
            <Separator/>
            <Button Click="OnEllipse">
                <Image Source="Images/ellipse.png"/>
            </Button>
            <Separator/>
            <Button Click="OnLine">
                <Image Source="Images/line.png"/>
            </Button>
            <Separator/>
            <Button Click="OnScribble">
                <Image Source="Images/pencil.png"/>
            </Button>
            <Separator/>
            <Button Click="OnCircle">
                <Image Source="Images/circle.png"/>
            </Button>
            <Separator/>
            <Button Click="OnUnDo">
                <Image Source="Images/undo.png"/>
            </Button>
            <Separator/>
            <Button Click="OnReDo">
                <Image Source="Images/redo.png"/>
            </Button>
        </ToolBar>
    </StackPanel>
</Window>